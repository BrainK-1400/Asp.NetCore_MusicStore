@model IEnumerable<MusicStore.Models.Album>
@{
    ViewData["Title"] = "Home";
}
    <h1>Home</h1>
    <div style="width:2000px">
        <div style="float:left">
            @await Component.InvokeAsync("StoreMenu")
        </div>
        <div style="float:left;padding-left:80px">
            <div style="width:700px">
                <img src="~/Images/home-showcase.png" />
            </div>
            <h3>
                <em>Fresh</em> off the grill
            </h3>
            <div style="padding-top:5px;padding-left:20px;height:auto">
                <!--TO-DO -->
                @foreach (var item in Model)
                {
                    <div style="width:100px;float:left;padding-right:150px;height:250px">
                        <div style="padding-left:20px;width:auto;width:100px;height:75px;">
                            <img src="@item.AlbumArtUrl" />
                        </div>
                        <div style="padding-left:30px;width:100px;font-size:15px;text-align:center;font-style:italic">
                                @Html.ActionLink(item.Title, "Details", "Store", new { id = item.AlbumId })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    

