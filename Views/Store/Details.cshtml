@model MusicStore.Models.Album

@{
    ViewData["Title"] = "Details";
}


<h1>Details</h1>
<div style="width:2000px">
    <div style="float:left">
        @await Component.InvokeAsync("StoreMenu")
    </div>
    <div style="float:left;padding-left:80px">


        <div>
            <h4>Album</h4>
            <hr />
            <img alt="@Model.Title" src="@Model.AlbumArtUrl" />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Artist)
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.ArtistName
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genre)
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.GenreName
                </dd>
            </dl>
        </div>
        <div>
            <!--TO-DO 添加进购物车-->
            @Html.ActionLink("Add To Cart", "AddToCart", "ShoppingCart", new { productId = Model.AlbumId,returnUrl="Store/Details/"+Model.AlbumId })
        </div>

    </div>
</div>