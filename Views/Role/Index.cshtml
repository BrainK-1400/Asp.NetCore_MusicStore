
@model IEnumerable<ApplicationUserRole>

@{
    ViewData["Title"] = "RoleList";
}
<h2>@ViewData["Title"]</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Role.ID</th>
            <th scope="col">Role.Name</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <th scope="row">@r.ConcurrencyStamp</th>
                <td>@r.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@r.Id" method="post">
                        <a asp-action="EditRole" asp-route-id="@r.Id" class="btn btn-primary">Edit</a>
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Confirmed？')">
                            Remove
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AddRole" class="btn btn-primary">AddRole</a>